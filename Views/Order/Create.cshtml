@model ABCRetailApp.Models.OrderCreateViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2 class="mb-5 text-white">Create Order</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group row mb-4">
        <label asp-for="SelectedCustomerId" class="col-sm-2 col-form-label text-white">Customer</label>
        <div class="col-sm-10">
            <select asp-for="SelectedCustomerId" asp-items="Model.Customers" class="form-control">
                <option value="">Select Customer</option>
            </select>
            <span asp-validation-for="SelectedCustomerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="SelectedProductId" class="col-sm-2 col-form-label text-white">Product</label>
        <div class="col-sm-10">
            <select asp-for="SelectedProductId" asp-items="Model.Products" class="form-control">
                <option value="">Select Product</option>
            </select>
            <span asp-validation-for="SelectedProductId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Quantity" class="col-sm-2 col-form-label text-white">Quantity</label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Price" class="col-sm-2 col-form-label text-white">Price</label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Enter price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-5">
        <label asp-for="OrderDate" class="col-sm-2 col-form-label text-white">Order Date</label>
        <div class="col-sm-10">
            <input asp-for="OrderDate" type="date" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-5">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </div>

    <style>
        body {
            background-color: darkslateblue;
        }

        .text-white {
            color: white;
        }

        label {
            color: white;
        }
    </style>
</form>
