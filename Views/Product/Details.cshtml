@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header" style="background-color: #3498db; color: #333;">
            <h2>@Model.ProductName</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Description</h4>
                    <p>@Model.Description</p>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded" style="max-width: 100%;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h4>Price</h4>
                    <p class="text-success font-weight-bold">@Model.Price.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: darkslateblue;
    }

    h2 {
        /* Add any specific styles for h2 if needed */
    }
</style>
