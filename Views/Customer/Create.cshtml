@model ABCRetailApp.Models.CustomerProfile

@{
    ViewData["Title"] = "Create Customer Profile";
}

<h2 class="mb-5 text-center text-white">New Customer Profile</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group row mb-4">
        <label asp-for="FirstName" class="col-sm-2 col-form-label text-white">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control rounded-pill shadow-sm" placeholder="Enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Surname" class="col-sm-2 col-form-label text-white">Surname</label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control rounded-pill shadow-sm" placeholder="Enter surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Email" class="col-sm-2 col-form-label text-white">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control rounded-pill shadow-sm" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-5">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Create" class="btn btn-success rounded-pill px-4 shadow-sm" />
            <a asp-action="Index" class="btn btn-secondary rounded-pill ml-2 px-4 shadow-sm">Back to List</a>
        </div>
    </div>

    <style>
        body {
            background-color: #2e3b4e; /* Dark slate background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .text-white {
            color: #f8f9fa;
        }

        label {
            color: #f8f9fa;
        }

        .form-control {
            border: 1px solid #ced4da;
            padding: 10px 15px;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                border-color: #4caf50; /* Green on focus */
                box-shadow: 0 0 10px rgba(76, 175, 80, 0.2); /* Light green shadow */
            }

        .btn {
            font-size: 1rem;
            padding: 10px 20px;
        }

        .btn-success {
            background-color: #4caf50;
            border-color: #4caf50;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .rounded-pill {
            border-radius: 50px;
        }

        h2 {
            color: #f8f9fa;
            font-weight: bold;
        }
    </style>
</form>
